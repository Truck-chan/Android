<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.TruckKun"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/side_buttons_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minWidth="20dp"
        android:background="#2C2C2C"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:onClick="forceTerminate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_stop_circle_24"
            app:tint="#EF1616" />

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp"/>

        <ImageButton
            android:onClick="openRegistersView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_data_object_24" />

        <ImageButton
            android:onClick="openRegistersView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_data_object_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:onClick="playAction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_play_arrow_24" />

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"/>

        <ImageButton
            android:onClick="playAction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_bakery_dining_24" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/open_panel_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/side_buttons_linearlayout"
        app:layout_constraintVertical_weight="1" />


    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <TextView
        android:id="@+id/testing_tv"
        android:text="pls work .."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/testing_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pls work .."
        app:layout_constraintBottom_toBottomOf="@+id/side_buttons_linearlayout"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>